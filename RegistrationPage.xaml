<Page x:Class="WpfTali.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="RegistrationPage">

    <Page.Resources>
        <Style x:Key="ModernInputStyle" TargetType="Control">
            <Setter Property="BorderThickness" Value="0,0,0,1.5"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0,2"/>
            <Setter Property="VerticalContentAlignment" Value="Bottom"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F8F2F4">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,30,50,0">
            <Button Content="HOME" Foreground="#be5e84" Background="White" />
            <Button Content="ABOUT US" Foreground="#be5e84" Background="White" />
            <Button Content="CONTACT" Foreground="#be5e84" Background="White" />
            <Button Content="SIGN UP" Foreground="#be5e84"  Background="White" />
        </StackPanel>

        <Border Background="White" CornerRadius="2" MaxWidth="900" MaxHeight="550" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="45,20">

                    <TextBlock Text="Sign up" FontFamily="/Fonts/#Alex Brush" FontSize="50" Foreground="#1a1a2e"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="private name" FontSize="15" TextAlignment="Center"/>
                            <TextBox Style="{StaticResource ModernInputStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="FAMILY NAME" FontSize="15" TextAlignment="Center" />
                            <TextBox Style="{StaticResource ModernInputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Email Address" FontSize="15" Margin="0,15,0,0" TextAlignment="Left"/>
                    <TextBox Style="{StaticResource ModernInputStyle}" Margin="0,0,0,15"/>

                    <TextBlock Text="USER NAME" FontSize="15" HorizontalAlignment="Left"/>
                    <TextBox Style="{StaticResource ModernInputStyle}" Width="150" HorizontalAlignment="Left" Margin="0,0,0,15"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Password" FontSize="15" TextAlignment="Center"/>
                            <PasswordBox Style="{StaticResource ModernInputStyle}" ToolTip="**********"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Confirm Password" FontSize="15" TextAlignment="Center"/>
                            <PasswordBox Style="{StaticResource ModernInputStyle}" ToolTip="**********"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="BORN DATE" FontSize="15" TextAlignment="Center"/>
                            <DatePicker BorderThickness="0,0,0,1.5" Background="Transparent" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ID NUMBER" FontSize="15" TextAlignment="Center"/>
                            <TextBox Style="{StaticResource ModernInputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="GENDER"  FontSize="15" Width="150" HorizontalAlignment="Left" TextAlignment="Center"/>
                    <ComboBox Style="{StaticResource ModernInputStyle}" Width="150" HorizontalAlignment="Left" BorderThickness="0,0,0,1.5"/>

                    <Button Content="Create Account" FontFamily="/Fonts/#Alex Brush"  FontSize="18" Background="#f3cbdf" Foreground="White" Height="40" Margin="0,25,0,0"/>

                    <TextBlock Text="Log in" FontFamily="/Fonts/#Alex Brush"  FontSize="18" Margin="0,10,0,0" Foreground="#f3cbdf" Cursor="Hand"/>
                </StackPanel>

                <Grid Grid.Column="1" Margin="5">
                    <Image Source="/images/signup.png" Stretch="UniformToFill"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>