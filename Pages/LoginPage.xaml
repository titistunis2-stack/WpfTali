<Page x:Class="WpfTali.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTali"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/1.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="40,100,20,0">

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Email" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                <TextBox x:Name="emailText" Grid.Column="1" Height="35" Width="500"
                         Background="#F6DCDA" Foreground="#6C3134" BorderThickness="0"
                         VerticalContentAlignment="Center" Padding="5,0"/>
            </Grid>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Password" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                <PasswordBox x:Name="passwordText" Grid.Column="1" Height="35" Width="500"
                             Background="#F6DCDA" Foreground="#6C3134" BorderThickness="0"
                             VerticalContentAlignment="Center" Padding="5,0"/>
                <TextBlock Grid.Column="1" Text="" Visibility="Collapsed" x:Name="AppComment"
                           FontSize="12" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,5"/>
            </Grid>

            <Button x:Name="loginButton" Content="Log In" Margin="0,30,0,10"
                    Width="150" Height="40" Background="#be5e84" Foreground="White" 
                    BorderThickness="0" FontSize="18" Click="Login_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
            <!--<Button Content="skip" Click="Skip"/>-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Doesn't have an account?" Foreground="White"/>
                <Button x:Name="SignUpButton" Content="Sign Up" Margin="10,0,0,0"
                        Background="Transparent" Foreground="#6C3134" BorderThickness="0"
                        FontWeight="Bold" Cursor="Hand" Click="SignUpButton_Click"/>    </StackPanel>

        </StackPanel>
    </Grid>
</Page>
