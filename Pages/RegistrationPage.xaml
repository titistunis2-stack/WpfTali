<Page x:Class="WpfTali.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="RegistrationPage">

    <Page.Resources>
        <Style x:Key="ModernInputStyle" TargetType="Control">
            <Setter Property="BorderThickness" Value="0,0,0,1.5"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0,2"/>
            <Setter Property="VerticalContentAlignment" Value="Bottom"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F8F2F4">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,30,50,0">
            <Button x:Name="Aboutus" Content="ABOUT US" Foreground="#be5e84" Background="White" Click="AboutUsButton_Click" FontSize="15"/>
        </StackPanel>

        <Border Background="White" CornerRadius="2" MaxWidth="900" MaxHeight="550" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="45,20">

                    <TextBlock Text="Sign up" FontFamily="/Fonts/#Alex Brush" FontSize="50" Foreground="#1a1a2e"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Private name" FontSize="15" TextAlignment="Center"/>
                            <TextBox x:Name="pName" Style="{StaticResource ModernInputStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Famliy name" FontSize="15" TextAlignment="Center" />
                            <TextBox x:Name="lName" Style="{StaticResource ModernInputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Email Address" FontSize="15" Margin="0,15,0,0" TextAlignment="Left"/>
                    <TextBox x:Name="Email"  Style="{StaticResource ModernInputStyle}" Margin="0,0,0,15"/>

                    <TextBlock Text="User name" FontSize="15" HorizontalAlignment="Left"/>
                    <TextBox x:Name="UserName" Style="{StaticResource ModernInputStyle}" Width="150" HorizontalAlignment="Left" Margin="0,0,0,15"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Password" FontSize="15" TextAlignment="Center"/>
                            <PasswordBox x:Name="Pass" Style="{StaticResource ModernInputStyle}" ToolTip="**********"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Telephone" FontSize="15" TextAlignment="Center"/>
                            <TextBox x:Name="telephone" Style="{StaticResource ModernInputStyle}" Margin="0,0,0,15"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Born date" FontSize="15" TextAlignment="Center"/>
                            <DatePicker x:Name="bornDate" BorderThickness="0,0,0,1.5" Background="Transparent" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Id number" FontSize="15" TextAlignment="Center"/>
                            <TextBox x:Name="idNum"  Style="{StaticResource ModernInputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="gender" Text="Gender"  FontSize="15" Width="150" TextAlignment="Center"/>
                            <ComboBox Style="{StaticResource ModernInputStyle}" Width="120" HorizontalAlignment="Center" BorderThickness="0" FontSize="10" 
                                 ItemsSource="{Binding Genders}"  
                               SelectedItem="{Binding SelectedGender}"
                               Padding="6,0"
                               FontWeight="Bold">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                                <ComboBoxItem Content="Else"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">

                            <TextBlock Text="kind of user" FontSize="15" HorizontalAlignment="Center"/>
                            <ComboBox Style="{StaticResource ModernInputStyle}" Width="120" HorizontalAlignment="Left" BorderThickness="0" FontSize="10" 
                              ItemsSource="{Binding users}"  
                                 SelectedItem="{Binding SelectedKindofuser}"
                                 Padding="6,0"
                                  FontWeight="Bold">
                                <ComboBoxItem Content="Trainee"/>
                                <ComboBoxItem Content="Trainer"/>
                                <ComboBoxItem Content="Manager"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Background="White"></TextBlock>
                    <Button Content="Create Account" Click="SignUpButton_Click" FontFamily="/Fonts/#Alex Brush"  FontSize="18" Background="#f3cbdf" Foreground="White" Height="30"/>
                    <TextBlock Background="White"></TextBlock>
                    <Button x:Name="LogIn" Content="Log In" FontFamily="/Fonts/#Alex Brush"  FontSize="18" Background="White" Height="20" Foreground="#f3cbdf" Click="LogInButton_Click"/>
                </StackPanel>

                <Grid Grid.Column="1" Margin="5">
                    <Image Source="/images/signup.png" Stretch="UniformToFill"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>