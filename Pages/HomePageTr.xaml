<Page x:Class="WpfTali.HomePageTr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTali"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePageTr">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/images/homepage.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBlock Text="Welcome Dear trainers to Fitali!" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 FontSize="30" 
                 FontFamily="/Fonts/#Alex Brush"
                 Foreground="Black"/>
        <StackPanel Grid.Row="1" x:Name="spContacts" Orientation="Horizontal" />
        
    </Grid>
</Page>
